	<%Date futureDate= new Date(128, 0, 22);%>
	<%String stringDate = "";%>

	<% switch (futureDate.getDay()) { case 0: stringDate = stringDate.concat("Sunday"); %>
		<% case 1: stringDate = stringDate.concat("Monday"); %>
		<% case 2: stringDate = stringDate.concat("Tuesday"); %>
		<% case 3: stringDate = stringDate.concat("Wednesday"); %>
		<% case 4: stringDate = stringDate.concat("Thursday"); %>
		<% case 5: stringDate = stringDate.concat("Friday"); %>
		<% case 6: stringDate = stringDate.concat("Saturday"); }%>
	<% stringDate = stringDate.concat(", the "); %>
	<% stringDate = stringDate.concat(" " + String.valueOf(futureDate.getDate()) + " of "); %>
	
	<% switch (futureDate.getMonth()) { case 0: { stringDate = stringDate.concat("January"); } %>
		<% case 1: { stringDate = stringDate.concat("February"); } %>
		<% case 2: { stringDate = stringDate.concat("March"); } %>
		<% case 3: { stringDate = stringDate.concat("April"); } %>
		<% case 4: { stringDate = stringDate.concat("May"); } %>
		<% case 5: { stringDate = stringDate.concat("June"); } %>
		<% case 6: { stringDate = stringDate.concat("July"); } %>
		<% case 7: { stringDate = stringDate.concat("August"); } %>
		<% case 8: { stringDate = stringDate.concat("September"); } %>
		<% case 9: { stringDate = stringDate.concat("October"); } %>
		<% case 10: { stringDate = stringDate.concat("November"); } %>
		<% case 11: { stringDate = stringDate.concat("December"); } } %>
	
	<% stringDate = stringDate.concat(", " + String.valueOf(futureDate.getYear() + 1900)); %>
	<div class="container text-center align-items-center">
		<h1><%=stringDate %></h1>
	</div>
</body>
