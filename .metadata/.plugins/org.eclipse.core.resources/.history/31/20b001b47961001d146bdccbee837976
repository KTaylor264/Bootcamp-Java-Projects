	<%Date futureDate= new Date(128, 0, 22);%>
	<%String stringDate = "";%>

	<% switch (futureDate.getDay()) { case 0: stringDate = stringDate.concat("Sunday"); %>
		<% case 1: stringDate = stringDate.concat("Monday"); %>
		<% case 2: stringDate = stringDate.concat("Tuesday"); %>
		<% case 3: stringDate = stringDate.concat("Wednesday"); %>
		<% case 4: stringDate = stringDate.concat("Thursday"); %>
		<% case 5: stringDate = stringDate.concat("Friday"); %>
		<% case 6: stringDate = stringDate.concat("Saturday"); }%>
	<% } %>
		
	<div class="container text-center align-items-center">
		<h1><% futureDate.getDay()%>, the</h1>
